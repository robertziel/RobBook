   <div class="field"> 
      <%= f.label :post %><br> 
      <%= f.text_area :content %> 
    </div> 
    <div class="actions"> 
      <%= f.submit "Post" %> 
    </div> 
<% end %>



<% @post.each do |post| %> 
<div class="post"> 
  <p class="content"><%= post.content %></p> 
  <p class="time"><%= post.created_at %></p> 
</div> 
<% end %>
</div>
