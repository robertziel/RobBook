<% provide(:title, "RobBook") %>

<div class="posts">


<%= form_for(@post_new) do |f| %>  
   <div class="field"> 
      <%= f.label :post , " "%><br> 
      <%= f.text_area :content %> 
    </div> 
    <div class="actions"> 
      <%= f.submit "Post" , class: "btn-submit"%>
    </div> 
<% end %>



<% @post.reverse_each do |post| %> 
<div class="post"> 
  <p class="author"><%= post.user.first_name unless post.user.blank? %> <%= post.user.last_name unless post.user.blank? %></p> 
  <p class="content"><%= post.content %></p> 
  <p class="time"><%= post.created_at %></p> 
</div> 
<% end %>

</div>
