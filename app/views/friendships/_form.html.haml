= form_for(@friendship) do |f|
  - if @friendship.errors.any?
    #error_explanation
      %h2
        = pluralize(@friendship.errors.count, "error")
        prohibited this friendship from being saved:
      %ul
        - @friendship.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :user_id
    %br/
    = f.number_field :user_id
  .field
    = f.label :friend_id
    %br/
    = f.number_field :friend_id
  .field
    = f.label :confirmed
    %br/
    = f.number_field :confirmed
  .field
    = f.label :create
    %br/
    = f.text_field :create
  .field
    = f.label :destroy
    %br/
    = f.text_field :destroy
  .actions
    = f.submit
