.message{ :class => ("his_message" if message.user.id != current_user.id)}

  %p.author
    - unless message.user.blank?
      = link_to (message.user.first_name + " " + message.user.last_name), message.user
  %p= message.body
  %time{:datetime => message.created_at, :title => message.created_at.strftime("%d %b  %Y at %I:%M%p")}
